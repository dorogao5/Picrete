# Security
SECRET_KEY=your-secret-key-here
# CORS (comma-separated or JSON array)
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://picrete.com,https://www.picrete.com

FIRST_SUPERUSER_USERNAME=admin
FIRST_SUPERUSER_PASSWORD=change-me

# Database
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=picretesuperuser
POSTGRES_PASSWORD=change-me
POSTGRES_DB=picrete_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=change-me

# S3 Storage (Yandex Object Storage)
S3_ENDPOINT=https://storage.yandexcloud.net
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET=picrete-object-storage
S3_REGION=ru-central1

# AI Settings
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
AI_MODEL=gpt-5
AI_MAX_TOKENS=10000
AI_REQUEST_TIMEOUT=600

# DataLab Marker OCR
DATALAB_API_KEY=your-datalab-api-key
DATALAB_BASE_URL=https://www.datalab.to/api/v1
DATALAB_MODE=accurate
DATALAB_OUTPUT_FORMAT=chunks,markdown
DATALAB_TIMEOUT_SECONDS=120
DATALAB_POLL_INTERVAL_SECONDS=2
DATALAB_MAX_POLL_ATTEMPTS=120
DATALAB_MAX_SUBMIT_RETRIES=3

# File Upload
MAX_UPLOAD_SIZE_MB=10
MAX_IMAGES_PER_SUBMISSION=10
MAX_CONCURRENT_EXAMS=150

PROMETHEUS_ENABLED=true
PICRETE_LOG_LEVEL=info
PICRETE_LOG_JSON=true
PICRETE_ENV=production
PICRETE_STRICT_CONFIG=1
